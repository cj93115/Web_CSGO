<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.Web_CSGO.mapper.TProductMapper">

    <select id="getProduct" resultType="com.Web_CSGO.entity.Product">
        SELECT  Product_ID as productId,
        Product_Name as productName,
        Product_Pictrure as productPictrure,
        Product_Sale as productSale,
        Product_Time as productTime,
        Product_PicSmall as productPicSmall
      FROM APPProduct
        <where>
            1=1
            <if test="product !=null ">
                <if test="product.productName !=null and product.productName !=''">
                    and  Product_Name =  #{product.productName,jdbcType = VARCHAR}
                </if>
            </if>
            <!--
                      <if test="User_Name != '' and User_Name != null">
            -->
            <!--
                      </if>
            -->
        </where>
    </select>
</mapper>
