<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.Web_CSGO.mapper.TProductMapper">

    <select id="getProduct" resultType="com.Web_CSGO.entity.Product">
        SELECT  Product_ID,
        Product_Name,
        Product_Pictrure,
        Product_Sale,
        Product_Time,
        Product_PicSmall
      FROM APPProduct
        <where>
            1=1
            <if test="product !=null ">
                <if test="product.Product_Name !=null and product.Product_Name !=''">
                    and  Product_Name =  #{product.Product_Name,jdbcType = VARCHAR}
                </if>
            </if>
            <!--
                      <if test="User_Name != '' and User_Name != null">
            -->
            <!--
                      </if>
            -->
        </where>
    </select>
</mapper>
